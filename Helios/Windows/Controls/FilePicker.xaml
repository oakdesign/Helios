<UserControl x:Class="GadrocsWorkshop.Helios.Windows.Controls.FilePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:heliosSdk="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
    Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <heliosSdk:HeliosTextBox Grid.Column="0" MinWidth="240" Margin="2" Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type heliosSdk:FilePicker}}, Path=Text}" />
        <Button Grid.Column="1" Height="15" FontSize="10" Padding="0" Margin="0,0,4,0" Click="BrowseButton_Click">...</Button>
        <Button Grid.Column="2" Height="15" FontSize="10" Padding="0" Margin="0,0,4,0" Template="{StaticResource DeleteButton}" Click="DeleteButton_Click"/>
    </Grid>
</UserControl>
