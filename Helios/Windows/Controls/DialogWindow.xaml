<Window x:Class="GadrocsWorkshop.Helios.Windows.Controls.DialogWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GadrocsWorkshop.Helios.Windows.Controls"
             MinHeight = "480"
             MinWidth = "640"
             WindowStartupLocation = "CenterScreen"
             SizeToContent = "WidthAndHeight"
             Title="{Binding RelativeSource={RelativeSource Self}, Path=Content.Title}"
             MaxHeight="800"
             WindowStyle = "SingleBorderWindow"
             Topmost = "True"
             ResizeMode = "NoResize"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static SystemCommands.CloseWindowCommand}" 
                        CanExecute="CloseWindow_CanExec" 
                        Executed="CloseWindow_Exec" />
    </Window.CommandBindings>
</Window>
